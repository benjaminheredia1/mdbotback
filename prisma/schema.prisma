generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum Estado {
  PENDIENTE
  EN_PROCESO 
  RESUELTO
} 
model Usuario { 
  id Int @id @default(autoincrement())
  email String @unique
  password String
  persona Persona[]
}

model Persona { 
  id        Int      @id @default(autoincrement())
  nombre  String
  hcCode String @unique
  insurance String?
  business String?
  status String?
  area String?
  createdAt DateTime @default(now())
  quejas Queja[]
  felicitaciones Felicitacion []
  solicitudes Solicitud[]
  id_usuario Int?
  formularios Formulario[]
  usuario Usuario? @relation(fields: [id_usuario], references: [id], onDelete: Cascade)
}

model Queja { 
  id       Int      @id @default(autoincrement())
  descripcion  String
  estado Estado @default(PENDIENTE)
  area_medica String
  respuesta String?
  id_persona Int
  persona Persona @relation(fields: [id_persona], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}
model Felicitacion { 
  id    Int @id @default(autoincrement())
  descripcion  String
  area_medica String
  id_persona Int
  Respuesta String?
  persona Persona @relation(fields: [id_persona], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model Solicitud {
  id Int @id @default(autoincrement())
  descripcion String
  area_medica String
  createdAt DateTime @default(now())
  estado Estado @default(PENDIENTE)
  Respuesta String?
  id_persona Int
  persona Persona @relation(fields: [id_persona], references: [id], onDelete: Cascade)
}
model Formulario {
  id Int @id @default(autoincrement())
  tipo String
  Calificacion String?
  createdAt DateTime @default(now())
  id_persona Int
  persona Persona @relation(fields: [id_persona], references: [id], onDelete: Cascade)
}